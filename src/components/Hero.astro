---
// Hero Component for Homepage
import { Image } from 'astro:assets';
import networkImg from '/public/images/network_infrastructure.png';
const base = import.meta.env.BASE_URL;
---
<section class="relative bg-gradient-to-br thegreen text-white overflow-hidden">
<!-- <section class="relative bg-gradient-to-br from-primary-900 via-primary-800 text-white overflow-hidden"> -->
  <!-- Background Pattern -->
  <!-- Video Background -->
<div class="absolute inset-0 opacity-90">
  <video 
    autoplay 
    muted 
    loop 
    playsinline
    class="w-full h-full object-cover"
  >
    <source src={`${base}/videos/SamfordITSolutions_clip_loop.mp4`} type="video/mp4">    
    Your browser does not support the video tag.
  </video>
  
  <!-- Dark Overlay (optional, for better text readability) -->
  <div class="absolute inset-0 bg-black/50"></div>
</div>

  <div class="container-custom relative">
    <div class="py-20 md:py-28 lg:py-36">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Content -->
        <div class="space-y-8">
          <div class="inline-block">
            <span class="bg-primary-500 text-primary-100 px-4 py-2 rounded-full text-sm font-medium">
              Trusted IT Solutions Provider
            </span>
          </div>
          
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight text-balance">
            End-to-End IT Solutions for Your Business
          </h1>
          
          <p class="text-xl leading-relaxed max-w-2xl">
            From network cabling to cloud solutions, we provide comprehensive managed IT services designed to ensure seamless operations, optimal performance, and sustainable growth.
          </p>

          <div class="flex flex-col sm:flex-row gap-4">
            <a href={`${base}/contact`} class="btn border-2 bg-primary-500 border-white text-white hover:bg-white hover:text-primary-900 focus:ring-white">
              Get Started
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </a>
            <a href={`${base}/services`} class="btn border-2 bg-primary-500 border-white text-white hover:bg-white hover:text-primary-900 focus:ring-white">
              Our Services
            </a>
          </div>

          <!-- Trust Indicators -->
          <div class="flex flex-wrap gap-8 pt-4">
            <div>
              <p class="text-3xl font-bold">25+</p>
              <p class="text-primary-100 text-sm">Years Experience</p>
            </div>
            <div>
              <p class="text-3xl font-bold">5+</p>
              <p class="text-primary-200 text-sm">Projects Completed</p>
            </div>
            <div>
              <p class="text-3xl font-bold">24/7</p>
              <p class="text-primary-200 text-sm">Support Available</p>
            </div>
          </div>
        </div>

        <!-- Image/Illustration -->
        <div class="relative hidden lg:block">
          <div class="relative z-10">
            <Image src={networkImg} alt="Network infrastructure and IT solutions" class="rounded-2xl shadow-2xl" />            
          </div>
          <!-- Decorative elements -->
          <div class="absolute -top-4 -right-4 w-72 h-72 bg-primary-500 rounded-2xl opacity-20 blur-3xl"></div>
          <div class="absolute -bottom-4 -left-4 w-72 h-72 bg-secondary-500 rounded-2xl opacity-20 blur-3xl"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Wave -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg class="w-full h-auto" viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M0 120L60 105C120 90 240 60 360 45C480 30 600 30 720 37.5C840 45 960 60 1080 67.5C1200 75 1320 75 1380 75L1440 75V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="rgb(249, 250, 251)"/>
    </svg>
  </div>
</section>