---
const currentPath = Astro.url.pathname;
import { Image } from 'astro:assets';
import logoImg from '/public/images/samford_it_solutions.png';
const base = import.meta.env.BASE_URL;

const navLinks = [
  { href: `${base}`, label: 'Home' },
  { href: `${base}/services`, label: 'Services' },
  { href: `${base}/network-cabling`, label: 'Network Cabling' },
  { href: `${base}/about`, label: 'About' },
  { href: `${base}/contact`, label: 'Contact' },
];
---

<header class="bg-grey shadow-sm sticky top-0 z-50">
  <nav class="container-custom p-4">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href={base} class="flex items-center space-x-2">
        <Image src={logoImg} alt="Samford IT Solutions" class="h-20 w-auto" />      
        <span class="text-2xl font-heading font-bold text-turquoise leading-6 text-center economica-bold">Samford <br><span class="text-xl text-white  text-center">IT Solutions</span></span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navLinks.map(link => (
          <a 
            href={link.href}
            class:list={[
              "text-2xl font-medium transition-colors duration-200 economica-bold",
              currentPath === link.href 
                ? "text-turquoise text-white" 
                : "text-white hover:text-primary-600 "
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <a href="/contact" class="btn btn-primary button-bg-green">
          Get Started
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-lg hover:bg-blue-500 "
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="white" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      {navLinks.map(link => (
        <a 
          href={link.href}
          class:list={[
            "block py-2 px-4 text-base font-medium rounded-lg duration-200 economica-bold",
            currentPath === link.href 
              ? "bg-primary-50 text-turquoise" 
              : "text-turquoise hover:bg-gray-50"
          ]}
        >
          {link.label}
        </a>
      ))}
      <a href="/contact" class="btn btn-primary w-full mt-4">
        Get Started
      </a>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>